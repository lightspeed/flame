{
  "name": "@lightspeed/flame-foundation",
  "private": true,
  "main": "dist/index.js",
  "browser": "dist/index.mjs",
  "version": "0.1.0",
  "description": "Foundational values for the Flame design system. Based on system-ui spec.",
  "author": "Lightspeed",
  "license": "SEE LICENSE IN LICENSE",
  "homepage": "https://github.com/lightspeed/flame#readme",
  "repository": "https://github.com/lightspeed/flame",
  "bugs": {
    "url": "https://github.com/lightspeed/flame/issues"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.1",
    "@types/node": "^12.7.2",
    "esbuild": "^0.5.23",
    "nodemon": "^1.18.10",
    "rimraf": "^2.6.3",
    "ts-node": "^8.3.0",
    "fs-extra": "^9.0.1",
    "typescript": "^3.9.5"
  },
  "scripts": {
    "prepublish": "yarn build",
    "build": "yarn clean && yarn build:types && yarn build:cjs && yarn build:esm",
    "build:cjs": "esbuild --bundle --outfile=dist/index.js --format=cjs --minify ./src/index.ts",
    "build:esm": "esbuild --bundle --outfile=dist/index.mjs --format=esm --minify ./src/index.ts",
    "build:types": "tsc --p tsconfig.json && rimraf \"dist/!(index)*\"",
    "clean": "rimraf dist"
  },
  "publishConfig": {
    "access": "public"
  }
}
